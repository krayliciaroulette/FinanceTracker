@model ExpenseTracker.Models.Budget
@{
    ViewData["Title"] = "Delete Budget";
    Layout = "_FinanceLayout";
}

<div class="container mt-5 text-white">
    <h2 class="mb-4 text-danger">⚠️ Confirm Delete</h2>

    <div class="card bg-dark p-4 shadow-lg">
        <h4>Are you sure you want to delete this budget?</h4>
        <hr />
        <p><strong>Category:</strong> @Model.Category</p>
        <p><strong>Amount:</strong> ₱@String.Format("{0:N2}", Model.Amount)</p>
        <p><strong>Month:</strong> @Model.Month @Model.Year</p>

        <form asp-action="DeleteBudget" asp-controller="Finance" method="get">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger mt-3">Yes, Delete</button>
            <a asp-action="Budgets" class="btn btn-secondary mt-3">Cancel</a>
        </form>
    </div>
</div>
