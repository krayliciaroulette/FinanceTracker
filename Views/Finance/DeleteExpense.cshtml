@model ExpenseTracker.Models.Expense

<h2>Delete Expense</h2>

<div>
    <h4>Are you sure you want to delete this expense?</h4>
    <p><strong>@Model.Category</strong> - ₱@Model.Amount</p>
    <p>@Model.Description</p>

    <form asp-action="DeleteExpense">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Expenses" class="btn btn-secondary">Cancel</a>
    </form>
</div>
