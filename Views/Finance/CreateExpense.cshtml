@model ExpenseTracker.Models.Expense
@{
    ViewData["Title"] = "Add Expense";
    Layout = "_FinanceLayout";
}

<div class="fade-in-up">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Main Form Card -->
            <div class="card">
                <div class="card-body p-4">
                    <h2 class="text-center text-gradient mb-4">
                        <span style="font-size: 2.5rem;">🧾</span><br />
                        Add New Expense
                    </h2>
                    <p class="text-center text-muted mb-4">@ViewBag.Today</p>

                    <form asp-action="CreateExpense" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Amount (₱) *</label>
                                <input asp-for="Amount" type="number" step="0.01" class="form-control form-control-lg" placeholder="0.00" required />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Category *</label>
                                <select asp-for="CategoryId" id="CategorySelect" class="form-select form-select-lg" required>
                                    <option value="">-- Select Category --</option>
                                    @foreach (var category in ViewBag.Categories as List<ExpenseTracker.Models.Category>)
                                    {
                                        <option value="@category.CategoryId">@category.CategoryName</option>
                                    }
                                </select>
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-semibold">Subcategory <small class="text-muted">(Optional)</small></label>
                                <input type="text" name="customCategoryName" class="form-control" placeholder="e.g., Grocery, Electricity, Gas, Fast Food" />
                                <small class="text-muted">Add a specific name for better tracking</small>
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-semibold">Description <small class="text-muted">(Optional)</small></label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Add details about this expense..."></textarea>
                            </div>

                            <div class="col-12 mt-4">
                                <button type="submit" class="btn btn-success btn-lg w-100 mb-2">
                                    <span>💾</span> Add Expense
                                </button>
                                <a asp-action="Expenses" class="btn btn-outline-light w-100">
                                    <span>←</span> Back to Expenses
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Today's Summary Card -->
            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <span>📅</span> Today's Expenses
                    </h5>
                    @if (ViewBag.TodaysExpenses == null || !((List<ExpenseTracker.Models.Expense>)ViewBag.TodaysExpenses).Any())
                    {
                        <div class="text-center py-4">
                            <div style="font-size: 3rem; opacity: 0.3;">📭</div>
                            <p class="text-muted mt-2">No expenses recorded today</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Category</th>
                                        <th class="text-end">Amount</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in (List<ExpenseTracker.Models.Expense>)ViewBag.TodaysExpenses)
                                    {
                                        <tr>
                                            <td><span class="badge bg-primary">@item.DisplayCategoryName</span></td>
                                            <td class="text-end"><strong>₱@item.Amount.ToString("N2")</strong></td>
                                            <td>@item.Description</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="table-active">
                                        <td><strong>Total Today</strong></td>
                                        <td class="text-end"><strong class="text-success">₱@ViewBag.TotalToday.ToString("N2")</strong></td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>