@model ExpenseTracker.Models.Budget
@{
    ViewData["Title"] = "Edit Budget";
    Layout = "_FinanceLayout";
}

<div class="fade-in-up">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div style="font-size: 4rem;">✏️</div>
                        <h2 class="text-gradient mt-3">Edit Budget</h2>
                    </div>

                    <form asp-action="EditBudget" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Category</label>
                            <select asp-for="CategoryId" class="form-select form-select-lg" required disabled>
                                @foreach (var category in ViewBag.Categories as List<ExpenseTracker.Models.Category>)
                                {
                                    <option value="@category.CategoryId" selected="@(Model.CategoryId == category.CategoryId)">@category.CategoryName</option>
                                }
                            </select>
                            <input type="hidden" asp-for="CategoryId" />
                            <small class="text-muted">Category cannot be changed</small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="BudgetAmount" class="form-label fw-semibold">Budget Amount (₱) *</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">₱</span>
                                <input asp-for="BudgetAmount" type="number" step="0.01" class="form-control" required />
                            </div>
                        </div>

                        <!-- Budget Status Info -->
                        <div class="alert glass-effect mb-4">
                            <div class="row text-center">
                                <div class="col-6">
                                    <small class="text-muted d-block">Current Spent</small>
                                    <strong class="text-danger fs-5">₱@Model.SpentAmount.ToString("N2")</strong>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted d-block">Remaining</small>
                                    <strong class="text-success fs-5">₱@Model.RemainingAmount.ToString("N2")</strong>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <span>💾</span> Save Changes
                            </button>
                            <a asp-action="Budgets" class="btn btn-outline-light">
                                <span>←</span> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>