@model Dictionary<string, List<ExpenseTracker.Models.Budget>>
@{
    ViewData["Title"] = "Budgets";
    Layout = "_FinanceLayout";
    var categories = ViewBag.Categories as List<ExpenseTracker.Models.Category> ?? new List<ExpenseTracker.Models.Category>();
}

<div class="space-y-6 animate-fade-in-up">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-3xl font-bold text-white tracking-tight">
                Budget Management
            </h1>
            <p class="text-slate-400 mt-1">Plan your spending and track your progress</p>
        </div>
    </div>

    <!-- Main Layout: Stacked -->
    <div class="space-y-8">
        
        <!-- Top Section: Grid (Form + Summary) -->
        <div class="grid grid-cols-1 xl:grid-cols-3 gap-6">
            <!-- Col 1: Add Budget Form -->
            <div class="xl:col-span-2 bg-slate-800/50 backdrop-blur-xl rounded-2xl border border-slate-700/50 p-6 shadow-xl">
                <h3 class="text-lg font-semibold text-white mb-5 flex items-center gap-2 border-b border-slate-700/50 pb-4">
                    <span class="material-symbols-rounded text-emerald-400">add_circle</span>
                    Set New Budget
                </h3>
                
                <form asp-action="AddBudget" method="post" class="flex flex-col md:flex-row gap-4 items-end">
                    <div class="flex-1 w-full">
                        <label class="block text-xs font-medium text-slate-400 uppercase tracking-wider mb-1.5">Category</label>
                        <div class="relative">
                            <span class="absolute left-3 top-1/2 -translate-y-1/2 material-symbols-rounded text-slate-500 text-lg pointer-events-none z-10">category</span>
                            <select name="CategoryId" class="w-full bg-slate-900/50 text-white text-sm rounded-xl border border-slate-700 pl-10 pr-4 py-3 focus:border-emerald-500 focus:ring-1 focus:ring-emerald-500 outline-none transition-all appearance-none cursor-pointer relative z-0">
                                <option value="" disabled selected>Select Category</option>
                                @if (categories != null)
                                {
                                    foreach (var cat in categories)
                                    {
                                        <option value="@cat.CategoryId">@cat.CategoryName</option>
                                    }
                                }
                            </select>
                            <span class="absolute right-3 top-1/2 -translate-y-1/2 material-symbols-rounded text-slate-500 text-lg pointer-events-none z-10">expand_more</span>
                        </div>
                    </div>

                    <div class="flex-1 w-full">
                        <label class="block text-xs font-medium text-slate-400 uppercase tracking-wider mb-1.5">Amount</label>
                        <div class="relative">
                            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-500 font-mono pointer-events-none z-10">₱</span>
                            <input type="number" name="BudgetAmount" step="0.01" required placeholder="0.00"
                                   class="w-full bg-slate-900/50 text-white text-sm rounded-xl border border-slate-700 pl-8 pr-4 py-3 focus:border-emerald-500 focus:ring-1 focus:ring-emerald-500 outline-none transition-all placeholder:text-slate-600 font-mono relative z-0" />
                        </div>
                    </div>

                    <div class="w-full md:w-auto">
                        <button type="submit" class="w-full md:w-auto px-6 py-3 bg-gradient-to-r from-emerald-600 to-teal-600 hover:from-emerald-500 hover:to-teal-500 text-white rounded-xl font-medium shadow-lg shadow-emerald-900/20 hover:shadow-emerald-900/40 transition-all duration-300 flex items-center justify-center gap-2">
                            <span>Create</span>
                            <span class="material-symbols-rounded text-lg">arrow_forward</span>
                        </button>
                    </div>
                </form>
            </div>

            <!-- Col 2: Summary Card -->
            @{
                // Calculate Summary Stats for the latest month or empty
                var latestKey = Model?.Keys.OrderByDescending(k => DateTime.Parse(k + "/01")).FirstOrDefault();
                var latestBudgets = latestKey != null ? Model[latestKey] : new List<ExpenseTracker.Models.Budget>();
                var totalBudget = latestBudgets.Sum(b => b.BudgetAmount);
                var totalSpent = latestBudgets.Sum(b => b.SpentAmount);
                var totalRemaining = totalBudget - totalSpent;
                var totalProgress = totalBudget > 0 ? (totalSpent / totalBudget) * 100 : 0;
            }
            <div class="xl:col-span-1 bg-gradient-to-br from-indigo-900/40 to-slate-900/40 backdrop-blur-xl rounded-2xl border border-indigo-500/20 p-6 flex flex-col justify-between relative overflow-hidden">
                <!-- Decorative BG -->
                <div class="absolute top-0 right-0 w-32 h-32 bg-indigo-500/10 rounded-full blur-2xl -mr-10 -mt-10 pointer-events-none"></div>
                
                <h3 class="text-sm font-semibold text-indigo-300 uppercase tracking-wider mb-4 flex items-center gap-2">
                    <span class="material-symbols-rounded text-lg">monitoring</span>
                    Monthly Overview
                </h3>

                <div class="grid grid-cols-2 gap-4 mb-4">
                    <div>
                        <p class="text-xs text-slate-400 mb-1">Total Budget</p>
                        <p class="text-lg font-bold text-white font-mono">₱@totalBudget.ToString("N0")</p>
                    </div>
                     <div>
                        <p class="text-xs text-slate-400 mb-1">Total Spent</p>
                        <p class="text-lg font-bold text-rose-400 font-mono">₱@totalSpent.ToString("N0")</p>
                    </div>
                </div>

                <div class="mt-auto">
                    <div class="flex justify-between items-end mb-2">
                        <span class="text-xs text-slate-400">Total Remaining</span>
                        <span class="text-xl font-bold @(totalRemaining < 0 ? "text-rose-400" : "text-emerald-400") font-mono">
                            ₱@totalRemaining.ToString("N2")
                        </span>
                    </div>
                    <div class="relative h-2 bg-slate-700/50 rounded-full overflow-hidden">
                        <div class="absolute top-0 left-0 h-full @(totalRemaining < 0 ? "bg-rose-500" : "bg-emerald-500") transition-all duration-700" 
                             style="width: @Math.Max(0, Math.Min(100, 100 - totalProgress))%">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Budget List Section -->
        <div>
            @if (Model == null || !Model.Any())
            {
                <div class="bg-slate-800/50 backdrop-blur-xl rounded-2xl border border-slate-700/50 p-12 text-center max-w-2xl mx-auto">
                    <div class="w-20 h-20 bg-slate-700/30 rounded-full flex items-center justify-center mx-auto mb-4">
                        <span class="material-symbols-rounded text-4xl text-slate-500">account_balance_wallet</span>
                    </div>
                    <h3 class="text-xl font-medium text-white mb-2">No budgets set</h3>
                    <p class="text-slate-400">Create your first budget above to start tracking.</p>
                </div>
            }
            else
            {
                @foreach (var monthGroup in Model.OrderByDescending(m => DateTime.Parse(m.Key + "/01")))
                {
                    <div class="mb-8">
                        <div class="flex items-center gap-3 ml-1 mb-4">
                            <span class="material-symbols-rounded text-slate-400">calendar_month</span>
                            <span class="text-lg font-semibold text-white">@monthGroup.Key</span>
                            <span class="px-2.5 py-0.5 rounded-full bg-slate-800 border border-slate-700 text-xs text-slate-400">
                                @monthGroup.Value.Count items
                            </span>
                        </div>

                        <!-- 3-Column Grid for compactness -->
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
                            @foreach (var item in monthGroup.Value)
                            {
                                var spentPercentage = item.BudgetAmount > 0 ? (item.SpentAmount / item.BudgetAmount) * 100 : 0;
                                var remainingPercentage = 100 - spentPercentage;
                                
                                // Status Logic
                                string statusBadgeText = "On Track";
                                string statusBadgeColor = "bg-emerald-500/10 text-emerald-400 border-emerald-500/20";
                                string progressBarColor = "bg-emerald-500";
                                
                                if (item.RemainingAmount < 0) 
                                { 
                                    statusBadgeText = "Over Budget";
                                    statusBadgeColor = "bg-rose-500/10 text-rose-400 border-rose-500/20";
                                    progressBarColor = "bg-rose-500";
                                }
                                else if (item.RemainingAmount == 0)
                                {
                                    statusBadgeText = "Empty";
                                    statusBadgeColor = "bg-slate-500/10 text-slate-400 border-slate-500/20";
                                    progressBarColor = "bg-slate-500";
                                }
                                else if (remainingPercentage <= 15)
                                {
                                    statusBadgeText = "Critical";
                                    statusBadgeColor = "bg-rose-500/10 text-rose-400 border-rose-500/20";
                                    progressBarColor = "bg-rose-500";
                                }
                                else if (remainingPercentage <= 35) 
                                { 
                                    statusBadgeText = "Running Low";
                                    statusBadgeColor = "bg-amber-500/10 text-amber-400 border-amber-500/20";
                                    progressBarColor = "bg-amber-500";
                                }

                                <div class="bg-slate-800/40 hover:bg-slate-800/60 transition-all duration-300 rounded-xl border border-slate-700/50 hover:border-slate-600 p-4 relative overflow-hidden group">
                                    
                                    <div class="flex justify-between items-start mb-3">
                                        <!-- Category Icon & Name -->
                                        <div class="flex items-center gap-3">
                                            <div class="w-10 h-10 rounded-lg bg-slate-700/50 flex items-center justify-center text-slate-300">
                                                <span class="material-symbols-rounded">category</span>
                                            </div>
                                            <div>
                                                <div class="flex items-center gap-2">
                                                    <h3 class="font-semibold text-white text-base">@item.CategoryName</h3>
                                                </div>
                                                <div class="flex items-center gap-2 mt-0.5">
                                                     <span class="text-[10px] font-bold uppercase tracking-wider px-1.5 py-0.5 rounded border @statusBadgeColor">
                                                        @statusBadgeText
                                                    </span>
                                                    <p class="text-xs text-slate-400">of ₱@item.BudgetAmount.ToString("N0")</p>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Actions -->
                                        <div class="flex gap-1">
                                            <button onclick="openEditModal('@item.Id', '@item.CategoryId', '@item.BudgetAmount')" 
                                                    class="p-1.5 rounded bg-slate-700/30 text-slate-400 hover:text-amber-400 hover:bg-amber-500/10 transition-all" title="Edit">
                                                <span class="material-symbols-rounded text-lg">edit</span>
                                            </button>
                                            <a asp-action="DeleteBudget" asp-route-id="@item.Id" 
                                               onclick="return confirm('Delete this budget?')"
                                               class="p-1.5 rounded bg-slate-700/30 text-slate-400 hover:text-rose-400 hover:bg-rose-500/10 transition-all" title="Delete">
                                                <span class="material-symbols-rounded text-lg">delete</span>
                                            </a>
                                        </div>
                                    </div>

                                    <!-- Values Row (Swapped) -->
                                    <div class="flex justify-between items-end mb-2">
                                        <!-- Left: Remaining now -->
                                        <div class="flex flex-col">
                                            <span class="text-xs text-slate-500 uppercase tracking-wide">Remaining</span>
                                            <div class="flex items-baseline gap-1.5">
                                                 <span class="@(item.RemainingAmount < 0 ? "text-rose-400" : "text-emerald-400") font-mono font-bold text-lg">
                                                    ₱@item.RemainingAmount.ToString("N2")
                                                </span>
                                                <span class="text-xs font-medium @(item.RemainingAmount < 0 ? "text-rose-400" : "text-emerald-400") opacity-80">
                                                    (@remainingPercentage.ToString("F0")%)
                                                </span>
                                            </div>
                                        </div>
                                        
                                        <!-- Right: Spent now -->
                                        <div class="flex flex-col text-right">
                                            <span class="text-xs text-slate-500 uppercase tracking-wide">Spent</span>
                                            <span class="text-sm font-mono text-slate-300">₱@item.SpentAmount.ToString("N2")</span>
                                        </div>
                                    </div>

                                    <!-- Progress Bar -->
                                    <div class="relative h-1.5 bg-slate-700/50 rounded-full overflow-hidden">
                                        <div class="absolute top-0 left-0 h-full @progressBarColor transition-all duration-500" 
                                             style="width: @Math.Max(0, remainingPercentage)%">
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div id="editModal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <!-- Backdrop -->
    <div class="fixed inset-0 bg-slate-900/80 backdrop-blur-sm transition-opacity opacity-0" id="editModalBackdrop"></div>

    <div class="fixed inset-0 z-10 overflow-y-auto">
        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
            <div class="relative transform overflow-hidden rounded-2xl bg-slate-800 border border-slate-700 text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-lg opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95" id="editModalPanel">
                
                <div class="absolute top-4 right-4">
                    <button type="button" onclick="closeEditModal()" class="text-slate-400 hover:text-white transition-colors">
                        <span class="material-symbols-rounded">close</span>
                    </button>
                </div>

                <div class="p-6">
                    <h3 class="text-lg font-semibold text-white mb-4" id="modal-title">Edit Budget</h3>
                    
                    <form asp-action="EditBudget" method="post" class="space-y-4">
                        <input type="hidden" id="edit_Id" name="Id" />
                        
                         <div>
                            <label class="block text-xs font-medium text-slate-400 uppercase tracking-wider mb-1.5">Category</label>
                            <div class="relative">
                                <span class="absolute left-3 top-1/2 -translate-y-1/2 material-symbols-rounded text-slate-500 text-lg">category</span>
                                <select id="edit_CategoryId" name="CategoryId" class="w-full bg-slate-900/50 text-white text-sm rounded-xl border border-slate-700 pl-10 pr-4 py-2.5 focus:border-amber-500 focus:ring-1 focus:ring-amber-500 outline-none transition-all appearance-none cursor-pointer">
                                    @if (categories != null)
                                    {
                                        foreach (var cat in categories)
                                        {
                                            <option value="@cat.CategoryId">@cat.CategoryName</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>

                        <div>
                            <label class="block text-xs font-medium text-slate-400 uppercase tracking-wider mb-1.5">Budget Limit</label>
                            <div class="relative">
                                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-500 font-mono">₱</span>
                                <input type="number" id="edit_Amount" name="BudgetAmount" step="0.01" required 
                                       class="w-full bg-slate-900/50 text-white text-sm rounded-xl border border-slate-700 pl-8 pr-4 py-2.5 focus:border-amber-500 focus:ring-1 focus:ring-amber-500 outline-none transition-all font-mono" />
                            </div>
                        </div>

                        <div class="mt-6 flex gap-3">
                            <button type="button" onclick="closeEditModal()" class="flex-1 px-4 py-2.5 bg-slate-700 hover:bg-slate-600 text-white text-sm font-medium rounded-xl transition-colors">
                                Cancel
                            </button>
                            <button type="submit" class="flex-1 px-4 py-2.5 bg-gradient-to-r from-amber-600 to-orange-600 hover:from-amber-500 hover:to-orange-500 text-white text-sm font-medium rounded-xl shadow-lg shadow-amber-900/20 transition-all">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const modal = document.getElementById('editModal');
        const backdrop = document.getElementById('editModalBackdrop');
        const panel = document.getElementById('editModalPanel');

        function openEditModal(id, categoryId, amount) {
            document.getElementById('edit_Id').value = id;
            document.getElementById('edit_CategoryId').value = categoryId;
            document.getElementById('edit_Amount').value = amount;

            modal.classList.remove('hidden');
            // Animate in
            setTimeout(() => {
                backdrop.classList.remove('opacity-0');
                panel.classList.remove('opacity-0', 'translate-y-4', 'sm:translate-y-0', 'sm:scale-95');
            }, 10);
        }

        function closeEditModal() {
            backdrop.classList.add('opacity-0');
            panel.classList.add('opacity-0', 'translate-y-4', 'sm:translate-y-0', 'sm:scale-95');
            
            setTimeout(() => {
                modal.classList.add('hidden');
            }, 300);
        }

        // Close on backdrop click
        backdrop.addEventListener('click', closeEditModal);
    </script>
}
