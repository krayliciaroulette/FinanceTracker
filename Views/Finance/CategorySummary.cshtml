@model List<ExpenseTracker.Models.CategorySummaryModel>

@{
    ViewData["Title"] = "Category Summary";
    Layout = "~/Views/Shared/_FinanceLayout.cshtml";
}

<h2 class="text-light mb-4">Expense Category Summary</h2>

<div class="card bg-dark text-white shadow p-4">
    @if (Model != null && Model.Any())
    {
        <table class="table table-dark table-striped table-hover rounded">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Total Spent (₱)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Category</td>
                        <td>₱@item.Total.ToString("N2")</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="fw-bold">
                    <td>Total</td>
                    <td>₱@ViewBag.TotalExpense.ToString("N2")</td>
                </tr>
            </tfoot>
        </table>
    }
    else
    {
        <p class="text-muted">No expenses recorded yet.</p>
    }
</div>
