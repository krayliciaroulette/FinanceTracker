@using System.Runtime.InteropServices
@model IEnumerable<ExpenseTracker.Models.Expense>

@{
    ViewData["Title"] = "Expenses";
    Layout = "_FinanceLayout";
    var today = DateTime.UtcNow.AddHours(8).ToString("yyyy-MM-dd");
    var totalExpenses = Model != null ? Model.Sum(x => x.Amount) : 0;
}

<div class="animate-in fade-in zoom-in duration-500 space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-3xl font-bold text-white tracking-tight">Expense Management</h1>
            <p class="text-slate-400 mt-1">Track and manage your daily spending</p>
        </div>
        <div class="flex items-center gap-2">
             <button onclick="document.getElementById('exportSection').classList.toggle('hidden')" class="bg-indigo-600 hover:bg-indigo-500 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors shadow-lg shadow-indigo-500/20 flex items-center gap-2">
                <span class="material-icons-outlined text-sm">download</span>
                Export Data
            </button>
        </div>
    </div>

    <!-- Export Section (Hidden by default) -->
    <div id="exportSection" class="hidden bg-slate-800 border border-slate-700 rounded-2xl p-6 shadow-xl animate-in slide-in-from-top-4 duration-300">
        <h3 class="text-white font-semibold mb-4 flex items-center gap-2">
            <span class="material-icons-outlined text-indigo-400">file_download</span>
            Export Options
        </h3>
        <form asp-action="Export" method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4">
             <div>
                <label class="block text-slate-400 text-xs font-medium uppercase tracking-wider mb-2">Start Date</label>
                <input type="date" name="startDate" class="w-full bg-slate-900 border border-slate-700 text-white rounded-lg px-3 py-2 text-sm focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all" value="@today" required />
            </div>
            <div>
                <label class="block text-slate-400 text-xs font-medium uppercase tracking-wider mb-2">End Date</label>
                <input type="date" name="endDate" class="w-full bg-slate-900 border border-slate-700 text-white rounded-lg px-3 py-2 text-sm focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all" value="@today" required />
            </div>
            <div>
                <label class="block text-slate-400 text-xs font-medium uppercase tracking-wider mb-2">Format</label>
                <select name="format" class="w-full bg-slate-900 border border-slate-700 text-white rounded-lg px-3 py-[10px] text-sm focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all" required>
                    <option value="pdf">PDF (.pdf)</option>
                    <option value="excel">Excel (.xlsx)</option>
                </select>
            </div>
            <div class="flex items-end">
                <button type="submit" class="w-full bg-slate-700 hover:bg-slate-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors border border-slate-600">Download File</button>
            </div>
        </form>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start">
        
        <!-- LEFT COLUMN: Filters & List -->
        <div class="lg:col-span-2 space-y-6">
            
            <!-- Filters Card -->
            <div class="bg-slate-900 border border-slate-800 rounded-2xl p-5 shadow-lg">
                <form asp-action="Expenses" method="get" class="flex flex-wrap gap-4 items-end">
                    <div class="flex-1 min-w-[140px]">
                         <label class="block text-slate-500 text-[10px] font-bold uppercase tracking-wider mb-1.5">Date Range</label>
                         <div class="flex gap-2">
                             <input type="date" name="startDate" class="flex-1 bg-slate-950 border border-slate-800 text-slate-300 rounded-lg px-3 py-2 text-xs focus:border-blue-500 outline-none" placeholder="Start" />
                             <input type="date" name="endDate" class="flex-1 bg-slate-950 border border-slate-800 text-slate-300 rounded-lg px-3 py-2 text-xs focus:border-blue-500 outline-none" placeholder="End" />
                         </div>
                    </div>
                     <div class="w-[140px]">
                        <label class="block text-slate-500 text-[10px] font-bold uppercase tracking-wider mb-1.5">Category</label>
                        <select name="categoryId" class="w-full bg-slate-950 border border-slate-800 text-slate-300 rounded-lg px-3 py-2 text-xs focus:border-blue-500 outline-none">
                            <option value="">All Categories</option>
                             @foreach (var category in ViewBag.Categories as List<ExpenseTracker.Models.Category>)
                            {
                                <option value="@category.CategoryId">@category.CategoryName</option>
                            }
                        </select>
                    </div>
                     <div class="w-auto">
                         <label class="block text-transparent text-[10px] font-bold uppercase tracking-wider mb-1.5">Action</label>
                        <button type="submit" class="bg-slate-800 hover:bg-slate-700 text-slate-300 border border-slate-700 px-4 py-2 rounded-lg text-xs font-medium transition-colors">
                            Filter
                        </button>
                        <a asp-action="Expenses" class="text-slate-500 hover:text-slate-300 text-xs font-medium ml-2 px-2 py-2">Reset</a>
                    </div>
                </form>
            </div>

            <!-- Transactions List -->
            <div class="bg-slate-900 border border-slate-800 rounded-2xl shadow-lg overflow-hidden flex flex-col min-h-[500px]">
                <div class="p-5 border-b border-slate-800 flex justify-between items-center bg-slate-900/50 backdrop-blur">
                    <h3 class="font-semibold text-white flex items-center gap-2">
                        <span class="material-icons-outlined text-slate-500">receipt_long</span>
                        Recent Transactions
                    </h3>
                    <span class="bg-slate-800 text-slate-400 text-xs font-medium px-2.5 py-1 rounded-md border border-slate-700">
                        @Model.Count() records
                    </span>
                </div>

                 <div class="overflow-x-auto flex-1">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="h-full flex flex-col items-center justify-center p-12 text-center opacity-60">
                             <div class="bg-slate-800/50 p-6 rounded-full mb-4">
                                <span class="material-icons-outlined text-slate-600 text-4xl">inbox</span>
                            </div>
                            <h5 class="text-white font-medium mb-1">No transactions found</h5>
                            <p class="text-slate-500 text-sm">Try adjusting your filters or add a new expense.</p>
                        </div>
                    }
                    else
                    {
                        <table class="w-full text-left text-sm text-slate-400">
                            <thead class="bg-slate-950/50 text-xs uppercase font-semibold text-slate-500 sticky top-0 backdrop-blur-sm z-10">
                                <tr>
                                    <th class="px-6 py-4 tracking-wider w-[20%]">Category</th>
                                    <th class="px-6 py-4 tracking-wider w-[35%]">Description</th>
                                    <th class="px-6 py-4 tracking-wider text-right w-[20%]">Amount</th>
                                    <th class="px-6 py-4 tracking-wider text-right w-[15%]">Date</th>
                                    <th class="px-6 py-4 tracking-wider text-right w-[10%]"></th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-800">
                                @{ int delay = 0; }
                                @foreach (var item in Model)
                                {
                                    <tr class="group hover:bg-slate-800/40 transition-all duration-200 animate-in fade-in slide-in-from-bottom-2 fill-mode-backwards" style="animation-delay: @(delay)ms; animation-fill-mode: both;">
                                        <td class="px-6 py-4">
                                            <span class="inline-flex items-center gap-2 px-2.5 py-1 rounded-full text-xs font-medium bg-blue-500/10 text-blue-400 border border-blue-500/20 group-hover:border-blue-500/40 transition-colors">
                                                @item.DisplayCategoryName
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 text-slate-300 font-medium">
                                             @if (string.IsNullOrWhiteSpace(item.Description))
                                            {
                                                <span class="text-slate-600 italic font-normal text-xs">No description</span>
                                            }
                                            else
                                            {
                                                @item.Description
                                            }
                                        </td>
                                        <td class="px-6 py-4 text-right">
                                            <span class="font-bold text-white tracking-tight">₱@item.Amount.ToString("N2")</span>
                                        </td>
                                        <td class="px-6 py-4 text-right">
                                            @{
                                                var phTimeZone = RuntimeInformation.IsOSPlatform(OSPlatform.Windows) ? TimeZoneInfo.FindSystemTimeZoneById("Singapore Standard Time") : TimeZoneInfo.FindSystemTimeZoneById("Asia/Manila");
                                                var phDate = TimeZoneInfo.ConvertTime(item.ExpenseDate, phTimeZone);
                                            }
                                            <div class="text-slate-300 text-xs">@phDate.ToString("MMM dd")</div>
                                            <div class="text-slate-600 text-[10px]">@phDate.ToString("hh:mm tt")</div>
                                        </td>
                                        <td class="px-6 py-4 text-right">
                                            <div class="flex justify-end gap-1 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                                                <!-- EDIT BUTTON: Now triggers modal -->
                                                <button type="button" 
                                                        class="p-1.5 hover:bg-amber-500/10 text-slate-500 hover:text-amber-500 rounded-md transition-colors"
                                                        title="Edit"
                                                        onclick="openEditModal(this)"
                                                        data-id="@item.Id"
                                                        data-amount="@item.Amount"
                                                        data-category-id="@item.CategoryId"
                                                        data-description="@item.Description"
                                                        data-custom-category="@item.CustomCategoryName">
                                                    <span class="material-icons-outlined text-sm">edit</span>
                                                </button>
                                                <a asp-action="DeleteExpense" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')" class="p-1.5 hover:bg-red-500/10 text-slate-500 hover:text-red-500 rounded-md transition-colors" title="Delete">
                                                    <span class="material-icons-outlined text-sm">delete</span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    delay += 50; // Stagger delay
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>

        <!-- RIGHT COLUMN: Add Expense (Sticky on large screens) -->
        <div class="lg:col-span-1 lg:sticky lg:top-6 space-y-6">
            <div class="bg-gradient-to-br from-slate-900 to-slate-900 border border-slate-800 rounded-2xl p-6 shadow-xl relative overflow-hidden group">
                 <!-- Decorative bg blur -->
                <div class="absolute -top-20 -right-20 w-40 h-40 bg-blue-500/10 rounded-full blur-3xl group-hover:bg-blue-500/20 transition-all duration-700"></div>

                <h2 class="text-lg font-bold text-white mb-6 flex items-center gap-2 relative z-10">
                    <span class="p-2 bg-blue-500/10 rounded-lg text-blue-400 border border-blue-500/10">
                         <span class="material-icons-outlined text-sm">add</span>
                    </span>
                    Add New Transaction
                </h2>

                <form asp-controller="Finance" asp-action="CreateExpense" method="post" class="space-y-4 relative z-10">
                    <div>
                        <label class="block text-slate-400 text-xs font-medium uppercase tracking-wider mb-2">Amount (₱)</label>
                        <div class="relative">
                            <span class="absolute left-3 top-2.5 text-slate-500">₱</span>
                            <input name="Amount" type="number" step="0.01" class="w-full bg-slate-800 border border-slate-700 text-white pl-8 pr-4 py-2.5 rounded-xl focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 outline-none transition-all font-semibold placeholder-slate-600" placeholder="0.00" required />
                        </div>
                    </div>

                    <div>
                         <label class="block text-slate-400 text-xs font-medium uppercase tracking-wider mb-2">Category</label>
                        <select name="CategoryId" class="w-full bg-slate-800 border border-slate-700 text-white px-4 py-2.5 rounded-xl focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 outline-none transition-all appearance-none cursor-pointer hover:bg-slate-800/80" required>
                            <option value="" class="text-slate-500">Select Category</option>
                            @if (ViewBag.Categories != null)
                            {
                                foreach (var category in ViewBag.Categories as List<ExpenseTracker.Models.Category>)
                                {
                                    <option value="@category.CategoryId">@category.CategoryName</option>
                                }
                            }
                        </select>
                    </div>

                    <div>
                        <label class="block text-slate-400 text-xs font-medium uppercase tracking-wider mb-2">Description</label>
                        <input name="Description" type="text" class="w-full bg-slate-800 border border-slate-700 text-white px-4 py-2.5 rounded-xl focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 outline-none transition-all placeholder-slate-600" placeholder="What was this for?" />
                    </div>

                     <div>
                        <label class="block text-slate-400 text-xs font-medium uppercase tracking-wider mb-2">Subcategory <span class="text-slate-600 normal-case tracking-normal">(Optional)</span></label>
                        <input name="customCategoryName" type="text" class="w-full bg-slate-800 border border-slate-700 text-white px-4 py-2.5 rounded-xl focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 outline-none transition-all placeholder-slate-600" placeholder="e.g. Coffee, Uber" />
                    </div>

                    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-500 text-white font-semibold py-3 rounded-xl shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 transform active:scale-[0.98] transition-all duration-200 mt-2">
                        Add Expense
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- EDIT EXPENSE MODAL -->
<div id="editModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black/60 backdrop-blur-sm hidden animate-in fade-in duration-200" onclick="if(event.target === this) closeEditModal()">
    <div class="relative w-full max-w-lg mx-4">
        <div class="bg-slate-900 border border-slate-800 rounded-2xl p-8 shadow-2xl relative overflow-hidden group animate-in zoom-in-95 duration-300">
            <!-- Close Button -->
            <button onclick="closeEditModal()" class="absolute top-4 right-4 text-slate-500 hover:text-white transition-colors">
                <span class="material-icons-outlined">close</span>
            </button>
            
            <!-- Decorative bg blur -->
            <div class="absolute -top-20 -right-20 w-40 h-40 bg-amber-500/10 rounded-full blur-3xl pointer-events-none"></div>

            <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-3 relative z-10">
                <span class="p-2.5 bg-amber-500/10 rounded-xl text-amber-500 border border-amber-500/10">
                        <span class="material-icons-outlined text-lg">edit</span>
                </span>
                Edit Transaction
            </h2>

            <form asp-action="EditExpense" method="post" class="space-y-5 relative z-10">
                <input type="hidden" id="edit_Id" name="Id" />

                <div>
                    <label class="block text-slate-400 text-xs font-medium uppercase tracking-wider mb-2">Amount (₱)</label>
                    <div class="relative">
                        <span class="absolute left-3 top-2.5 text-slate-500 font-semibold">₱</span>
                        <input id="edit_Amount" name="Amount" type="number" step="0.01" class="w-full bg-slate-800 border border-slate-700 text-white pl-8 pr-4 py-2.5 rounded-xl focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500 outline-none transition-all font-semibold placeholder-slate-600" required />
                    </div>
                </div>

                <div>
                    <label class="block text-slate-400 text-xs font-medium uppercase tracking-wider mb-2">Category</label>
                    <select id="edit_CategoryId" name="CategoryId" class="w-full bg-slate-800 border border-slate-700 text-white px-4 py-2.5 rounded-xl focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500 outline-none transition-all appearance-none cursor-pointer hover:bg-slate-800/80" required>
                        @foreach (var category in ViewBag.Categories as List<ExpenseTracker.Models.Category>)
                        {
                            <option value="@category.CategoryId">@category.CategoryName</option>
                        }
                    </select>
                </div>

                <div>
                    <label class="block text-slate-400 text-xs font-medium uppercase tracking-wider mb-2">Description</label>
                    <textarea id="edit_Description" name="Description" class="w-full bg-slate-800 border border-slate-700 text-white px-4 py-2.5 rounded-xl focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500 outline-none transition-all placeholder-slate-600 min-h-[80px]" placeholder="What was this for?"></textarea>
                </div>

                <div>
                    <label class="block text-slate-400 text-xs font-medium uppercase tracking-wider mb-2">Subcategory <span class="text-slate-600 normal-case tracking-normal">(Optional)</span></label>
                    <input id="edit_CustomCategoryName" type="text" name="customCategoryName" class="w-full bg-slate-800 border border-slate-700 text-white px-4 py-2.5 rounded-xl focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500 outline-none transition-all placeholder-slate-600" placeholder="e.g., Grocery, Electricity" />
                </div>

                <div class="flex items-center gap-3 pt-4">
                    <button type="button" onclick="closeEditModal()" class="flex-1 py-3 text-center text-slate-400 hover:text-white font-medium hover:bg-slate-800 rounded-xl transition-colors border border-transparent hover:border-slate-700">
                        Cancel
                    </button>
                    <button type="submit" class="flex-[2] bg-amber-600 hover:bg-amber-500 text-white font-semibold py-3 rounded-xl shadow-lg shadow-amber-500/20 hover:shadow-amber-500/40 transform active:scale-[0.98] transition-all duration-200">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openEditModal(button) {
            // Get data from attributes
            const id = button.getAttribute('data-id');
            const amount = button.getAttribute('data-amount');
            const categoryId = button.getAttribute('data-category-id');
            const description = button.getAttribute('data-description');
            const customCategory = button.getAttribute('data-custom-category');

            // Populate form
            document.getElementById('edit_Id').value = id;
            document.getElementById('edit_Amount').value = amount;
            document.getElementById('edit_CategoryId').value = categoryId;
            document.getElementById('edit_Description').value = description;
            document.getElementById('edit_CustomCategoryName').value = customCategory;

            // Show modal
            document.getElementById('editModal').classList.remove('hidden');
        }

        function closeEditModal() {
            document.getElementById('editModal').classList.add('hidden');
        }

        // Close logic for Escape key
        document.addEventListener('keydown', function(event) {
            if (event.key === "Escape") {
                closeEditModal();
            }
        });
    </script>
}