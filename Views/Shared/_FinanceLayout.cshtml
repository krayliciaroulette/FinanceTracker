<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Finance Tracker</title>
    
    <!-- Material Symbols -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        slate: {
                            800: '#1e293b',
                            900: '#0f172a',
                        },
                        brand: {
                            500: '#3b82f6',
                            600: '#2563eb',
                        }
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
    
    <style>
        body { 
            font-family: 'Inter', sans-serif; 
            overflow: hidden;
            }
            ::-webkit-scrollbar {
                display: none;
            }
    </style>
</head>
<body class="bg-gray-900 text-gray-100 flex h-screen overflow-hidden">

    <!-- Sidebar -->
    <aside class="w-64 bg-slate-900 border-r border-slate-800 flex flex-col hidden md:flex">
        <div class="p-6 border-b border-slate-800 flex items-center gap-2">
            <span class="material-icons-outlined text-blue-500">account_balance_wallet</span>
            <span class="font-bold text-xl tracking-tight text-white">FinanceTracker</span>
        </div>

        <nav class="flex-1 p-4 space-y-1 overflow-y-auto">
            <a asp-controller="Finance" asp-action="Index" 
               class="flex items-center gap-3 px-4 py-3 text-sm font-medium rounded-lg transition-colors @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "bg-slate-800 text-white" : "text-slate-400 hover:bg-slate-800 hover:text-white")">
                <span class="material-icons-outlined">dashboard</span>
                Dashboard
            </a>
            
            <a asp-controller="Finance" asp-action="Expenses" 
               class="flex items-center gap-3 px-4 py-3 text-sm font-medium rounded-lg transition-colors @(ViewContext.RouteData.Values["Action"]?.ToString() == "Expenses" ? "bg-slate-800 text-white" : "text-slate-400 hover:bg-slate-800 hover:text-white")">
                <span class="material-icons-outlined">receipt_long</span>
                Expenses
            </a>
            
            <a asp-controller="Finance" asp-action="Budgets" 
               class="flex items-center gap-3 px-4 py-3 text-sm font-medium rounded-lg transition-colors @(ViewContext.RouteData.Values["Action"]?.ToString() == "Budgets" ? "bg-slate-800 text-white" : "text-slate-400 hover:bg-slate-800 hover:text-white")">
                <span class="material-icons-outlined">pie_chart</span>
                Budgets
            </a>
            
            <a asp-controller="Finance" asp-action="ExpenseTracking" 
               class="flex items-center gap-3 px-4 py-3 text-sm font-medium rounded-lg transition-colors @(ViewContext.RouteData.Values["Action"]?.ToString() == "ExpenseTracking" ? "bg-slate-800 text-white" : "text-slate-400 hover:bg-slate-800 hover:text-white")">
                <span class="material-icons-outlined">trending_up</span>
                Tracking
            </a>
        </nav>

        <div class="p-4 border-t border-slate-800">
             <button onclick="confirmLogout()" class="flex w-full items-center gap-3 px-4 py-3 text-sm font-medium text-red-400 rounded-lg hover:bg-slate-800 hover:text-red-300 transition-colors">
                <span class="material-icons-outlined">logout</span>
                Logout
            </button>
        </div>
    </aside>

    <!-- Mobile Header (Visible only on small screens) -->
    <div class="md:hidden fixed top-0 w-full bg-slate-900 border-b border-slate-800 z-50 flex items-center justify-between p-4">
         <div class="flex items-center gap-2">
            <span class="material-icons-outlined text-blue-500">account_balance_wallet</span>
            <span class="font-bold text-lg text-white">FinanceTracker</span>
        </div>
        <button class="text-slate-400 hover:text-white">
            <span class="material-icons-outlined">menu</span>
        </button>
    </div>

    <!-- Main Content -->
    <main class="flex-1 flex flex-col h-full relative overflow-hidden bg-black/20">
        <div class="flex-1 overflow-y-auto p-6 md:p-8 pt-20 md:pt-8 scrollbar-thin scrollbar-thumb-slate-700 scrollbar-track-transparent">
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="mb-6 p-4 rounded-lg bg-green-500/10 border border-green-500/20 text-green-400 flex items-center gap-3">
                    <span class="material-icons-outlined">check_circle</span>
                    <p>@TempData["SuccessMessage"]</p>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="mb-6 p-4 rounded-lg bg-red-500/10 border border-red-500/20 text-red-400 flex items-center gap-3">
                    <span class="material-icons-outlined">error_outline</span>
                    <p>@TempData["ErrorMessage"]</p>
                </div>
            }

            @RenderBody()
        </div>
    </main>

    <script>
        function confirmLogout() {
            if (confirm("Are you sure you want to log out?")) {
                window.location.href = '/Account/Logout';
            }
        }
    </script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>